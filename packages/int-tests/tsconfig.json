{
  "compilerOptions": {
    "declaration": true,
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "lib": ["ESNext"],
    "target": "es2020",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../common"
    }
  ]
}
